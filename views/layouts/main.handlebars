<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>The Cat Shack</title>
    <script
      src="https://kit.fontawesome.com/a83a779a41.js"
      crossorigin="anonymous"
    ></script>
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat&family=Poiret+One&family=Public+Sans:ital,wght@0,300;0,500;1,300&display=swap"
      rel="stylesheet"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Rock+Salt&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>

  <body>
    <header>
      <div
        class="jumbotron p-4 jumbotron-fluid bg-dark"
        style="margin-bottom: 0px"
      >
        <h1 class="display-3 page-title">The Cat Shack</h1>
      </div>
    </header>
    <nav>
      <ul class="nav justify-content-center nav-tabs">
        <li class="nav-item">
          <a class="nav-link" href="/">Home</a></li>
        {{#if loggedIn}}
          {{#if isAdmin}}
            <li class="nav-item">
              <button class="btn-no-style"><a
                  class="nav-link"
                  href="/dashboard"
                >Dashboard</a></button></li>

          {{/if}}
          <li class="nav-item">
            <button
              id="logout"
              class="btn-no-style nav-link"
            >Logout</button></li>
        {{else}}
          <li class="nav-item">
            <a class="nav-link" href="/login">Login</a></li>
        {{/if}}
      </ul>
    </nav>
    <main>
      {{{body}}}
    </main>
    <footer>
      Thanks for visiting!
    </footer>

    {{#if loggedIn}}
      <script src="/javascript/logout.js"></script>
    {{/if}}
  </body>
</html>

{{! // if logged in as Admin (isAdmin: true) }}
{{! <li class="nav-item">
            <button class="btn-no-style"><a class="nav-link" href="/dashboard">Dashboard</a></button></li>

          <li class="nav-item">
            <button id="logout" class="btn-no-style nav-link">Logout</button></li> }}

{{! // if logged in as user (isAdmin: false) }}
{{! <li class="nav-item">
            <button id="logout" class="btn-no-style nav-link">Logout</button></li> }}

{{! // not logged in }}
{{! <li class="nav-item">
            <a class="nav-link" href="/login">Login</a></li> }}