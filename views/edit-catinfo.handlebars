<div class="jumbotron card-color">
  <a href="/dashboard"> &larr; Back to dashboard</a><br/>
  <br/>
  <h2>
    Edit Post
  </h2>
  <hr class="my-3">

  <form class="edit-post-form form">
    <div class="form-group">
      <label for="post-title">Title</label>
      <input type="text" class="form-control" id="post-title" name="post-title" value="{{post.title}}" />
    </div>
    <div>
      <label for="post-text">Content</label>
      <input id="post-text" class="form-control" name="post-text" value="{{post.post_text}}" />
    </div>
    <div>
      by you on {{format_date post.created_at}} | {{post.comments.length}} {{format_plural "comment" post.comments.length}}
    </div>
    <button type="submit" class="btn btn-light">Save post</button>
    <button type="button" class="delete btn btn-light">Delete post</button>
  </form>

  </div>


<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/imagehandler.js"></script>




